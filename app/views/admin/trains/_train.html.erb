<tr>
  <td>
    <div id="train_number_<%= train.id %>">
      <%= train.number %>
    </div>
    <%= render 'inline_form', train: train, hidden: true %>
  </td>
  <td><%= link_to 'Показать', admin_train_path(train) %></td>
  <td><%= link_to t('common.edit'), '', class: 'edit_train', data: { train_id: train.id } %></td>
  <td><%= link_to 'Удалить', admin_train_path(train), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
</tr>