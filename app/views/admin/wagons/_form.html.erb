<%= form_for wagon.new_record? ? [:admin, train, wagon] : [:admin, wagon] do |f| %>
    <%= render 'common/errors', resource: wagon %>

    <div class="form-group">
      <%= f.label :type, 'Тип вагона' %>
      <%= f.select :type, Wagon::TYPES %>
    </div>

    <div class="form-group wagon-seats" id="wagon_group_top_seats">
      <%= f.label :top_seats, 'Верхних мест' %>
      <%= f.text_field :top_seats %>
    </div>

    <div class="form-group wagon-seats" id="wagon_group_bottom_seats">
      <%= f.label :bottom_seats, 'Нижних мест' %>
      <%= f.text_field :bottom_seats %>
    </div>

    <div class="form-group wagon-seats" id="wagon_group_side_top_seats">
      <%= f.label :side_top_seats, 'Боковых верхних мест' %>
      <%= f.text_field :side_top_seats %>
    </div>

    <div class="form-group wagon-seats" id="wagon_group_side_bottom_seats">
      <%= f.label :side_bottom_seats, 'Боковых нижних мест' %>
      <%= f.text_field :side_bottom_seats %>
    </div>

    <div class="form-group wagon-seats" id="wagon_group_seats">
      <%= f.label :seats, 'Сидячих мест' %>
      <%= f.text_field :seats %>
    </div>

    <%= f.submit wagon.new_record? ? 'Создать' : 'Изменить' %>
<% end %>