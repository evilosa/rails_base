<%= form_for [:admin, railway_station] do |f| %>
    <%= render 'common/errors', resource: railway_station %>

    <div class="field">
      <%= f.label :name, 'Наименование' %>
      <%= f.text_field :name %>
    </div>

    <div class="actions">
      <%= f.submit "#{ railway_station.new_record? ? 'Создать' : 'Изменить' }" %>
    </div>
<% end %>
