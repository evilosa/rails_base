<tr>
  <td><%= wagon.number %></td>
  <td><%= wagon.wagon_type %></td>
  <td><%= wagon.train.present? ? wagon.train.number : 'Не указан' %></td>
  <td><%= "#{wagon.top_places}/#{wagon.bottom_places}" %></td>
  <td><%= link_to 'Показать', wagon %></td>
  <td><%= link_to 'Редактировать', edit_wagon_path(wagon) %></td>
  <td><%= link_to 'Удалить', wagon, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
</tr>